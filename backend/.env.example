# Datenbank
# Lokal: sqlite:///./webtech.db
# Production (Render Postgres): postgresql://user:password@host/dbname
DATABASE_URL=sqlite:///./webtech.db

# JWT Secret Key (WICHTIG: In Production langen, zufälligen Key verwenden!)
# Generieren mit: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production

# JWT Einstellungen
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins – JSON-Array oder komma-separiert
# Lokal:
# CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
# Production:
# CORS_ORIGINS=["https://webtech-website-gilt.vercel.app"]
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
